@label("Segurança")//xxxx
domain security

@label("Autorização")
service authorization {
	
	config {
		groupId: "br.com.kerubin.api"
		version: "1.0.0"
		cloudConfigUri: "http://localhost:9091"
		servicePort: 9002
		
		messagingCore {version:"1.0.0"}
		databaseCore {version:"1.0.0"}
	}
	
	@baseRepository
	@auditing
	@label("Usuário")
	entity SysUser {
		
		id: uuid
		
		name: string
		label: "Nome"
		web(styleClass: "ui-md-6")
		autoComplete
		listFilter(many: "Nome do(s) usuário(s)")
		
		email: string
		label: "E-mail"
		web(styleClass: "ui-md-6")
		autoComplete
		
		password: string	
		label: "Senha"
		web(styleClass: "ui-md-6")
		grid(hidden)
		
		accountType: AccountType
		label: "Tipo da conta"
		web(styleClass: "ui-md-6")
		autoComplete
		
		tenant: refers Tenant? manyToOne(fetch: eager)
		label: "Tenant"
		web(styleClass: "ui-md-6")
		grid(hidden)
		
		administrator: boolean default: false?
		label: "Administrador"
		web(styleClass: "ui-md-6")
		
		active: boolean default: false?
		label: "Ativo"
		web(styleClass: "ui-md-6")
		
		activationDate: dateTime?
		label: "Data da ativação"
		web(styleClass: "ui-md-6")
		grid(hidden)
		
		confirmed: boolean default: false?
		label: "E-mail confirmado"
		web(styleClass: "ui-md-6")
		grid(hidden)
		
		confirmationDate: dateTime?
		label: "Data da confirmação"
		web(styleClass: "ui-md-6")
		grid(hidden)
		
		confirmationId: string?
		label: "Identificador da confirmação"
		web(styleClass: "ui-md-6")
		grid(hidden)
	}
	
	@label("Tipo da conta")
	enum AccountType {
		PERSONAL 
		label: "Pessoal"
		default
		
		CORPORATE 
		label: "Corporativa"
	}
	
	@label("Tenant")
	entity Tenant {
		
		id: uuid
		
		name: string
		label: "Nome"
		web(styleClass: "ui-md-10")
		autoComplete
		listFilter(many: "Nome do(s) tenant(s)")
		
		active: boolean?
		label: "Ativo"
		web(styleClass: "ui-md-2")
	}
	
}